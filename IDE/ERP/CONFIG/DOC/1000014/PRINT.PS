    //==========================================================================
    procedure PreviewReportTherm(const ID, ResName, SQLName:string);
    var
      lkRpt :TxReport;
      lkRes :string;
      lkImg :TxrImage;
    begin
      lkRes := StringsLoadFromFile(ResName);
      if(StrTrimAll(lkRes) = '')then
        begin
        Dialogs.MessageDlg('Неверный файл ресурсов '+#13#10+ResName, mtError, [mbOk]);
        exit;
        end;
      lkRpt := TxReport(StrToComponent(lkRes));
      lkRpt.DataBase := FBDataBase;
      if(lkRpt.DataSets.Count < 2)then
        while(lkRpt.DataSets.Count < 2)do
          lkRpt.DataSets.Add;
      lkRpt.DataSets[0].SQL.Text := StrReplaceStr( StringsLoadFromFile( SQLName ), '?J_ID', ID );
      lkRpt.DataSets[1].SQL.Text := 'SELECT * FROM PROC$D_1000014('''+ID+''') ';
      lkImg := TxrImage(lkRpt.FindComponent('ImgLogo'));
      lkRes := StrAbsolutePath('../conf/ent/logo.bmp', Amunhotep.ExeName);
      if FileExists(lkRes)then
        try
          lkImg.Picture.LoadFromFile(lkRes);
        except
        end;
      lkRpt.Prepare;
      lkRpt.Preview;
    end;
    //==========================================================================
    
var
  J_ID      :string;
  J_TYPE_ID :string;
  Indx      :Integer;
  Varnts    :string;
begin
  J_ID := GetGlobalVariable('J_ID');
  if( (StrCiphersOnlyInt(J_ID)='') or (UpperCase(J_ID)='NULL') )then exit;
  if not GetField(FBDataBase, 'TABL$J_4', 'TYPE_ID', 'ID = '+J_ID+' ', J_TYPE_ID)then exit;
  Varnts := 
    'Шаблон документа на украинском языке'+#13#10+
//    'Шаблон документа на русском языке'+#13#10+
    'Штрих-коды на ТМЦ   6,5 x 4,5см (3 в ряд на A4)'+#13#10+
    'Штрих-коды на ТМЦ   5,0 x 3,0см (4 в ряд на A4)'+#13#10+
    'Штрих-коды на ТМЦ   5,0 x 1,7см (4 в ряд на A4)'+#13#10+
    'Печать на термопринтер 80 мм (полная)'+#13#10+
    'Печать на термопринтер 80 мм (только количество)'
    ;
  Indx := 0;
  if not Dialogs.CaseItem('Выберите шаблон печати', Varnts, Indx) then exit;
  case Indx of
    0:PreviewReport(J_ID, 'PEAKTOP:IDE/ERP/CONFIG/DOC/'+J_TYPE_ID+'/RPT_DEFAULT0001.XFM');
//    1:PreviewReport(J_ID, 'PEAKTOP:IDE/ERP/CONFIG/DOC/'+J_TYPE_ID+'/RPT_DEFAULT0000.XFM');
    1:PreviewReportPRICE(J_ID, 'PEAKTOP:IDE/ERP/CONFIG/REF/TMC_CTGR/PRICE0001.XFM');
    2:PreviewReportPRICE(J_ID, 'PEAKTOP:IDE/ERP/CONFIG/REF/TMC_CTGR/PRICE0002.XFM');
    3:PreviewReportPRICE(J_ID, 'PEAKTOP:IDE/ERP/CONFIG/REF/TMC_CTGR/PRICE0003.XFM');
    4:PreviewReportTherm(J_ID,  StrAbsolutePath('./RPT_THERMO_80_01.XFM', ScriptName), StrAbsolutePath('./RPT_THERMO.SQL', ScriptName) );
    5:PreviewReportTherm(J_ID,  StrAbsolutePath('./RPT_THERMO_80_02.XFM', ScriptName), StrAbsolutePath('./RPT_THERMO.SQL', ScriptName) );
  end;   
end.
