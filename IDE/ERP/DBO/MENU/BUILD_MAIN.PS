{$DEFINE PEAKTOP:IDE/ERP/DBO/MENU/BUILD_MAIN.PS}
{$IFNDEF PEAKTOP:GLOBAL_VARIABLES.INC}                   {$I PEAKTOP:GLOBAL_VARIABLES.INC}  {$ENDIF}
{$IFNDEF PEAKTOP:IDE/ERP/DBO/USERS/GLOBALVARIABLES.INC}  {$I ../USERS/GLOBALVARIABLES.INC}  {$ENDIF}
{$IFNDEF PEAKTOP:IDE/ERP/DBO/MENU/LOADITEMS.INC}         {$I ./LOADITEMS.INC}               {$ENDIF}
{$IFNDEF PEAKTOP:IDE/ERP/DBO/MENU/EVENTS.INC}            {$I ./EVENTS.INC}                  {$ENDIF}
var
  lkTMP :string;
begin
  DontAutoFree;
  SetGlobalVariable(ERP_GLOBAL_VARIABLE_DBMENU_20120710, '0');
  GetField(FBDataBase, 'RDB$RELATION_FIELDS', 'COALESCE(COUNT(RDB$FIELD_ID),0)', '(TRIM(RDB$RELATION_NAME) = ''TABL$_MENU'')AND(TRIM(RDB$FIELD_NAME) = ''ACCSS'')', lkTMP);
  if(lkTMP <> '0')then
    SetGlobalVariable(ERP_GLOBAL_VARIABLE_DBMENU_20120710, '1');
  ERP_DBMenuItems_Clear(Amunhotep.MainForm.Menu.Items);
  ERP_DBMenuItems_Build(Amunhotep.MainForm.Menu.Items, 'MAINMENU', '0', @ERP_DBMenuItem_OnClick_Default);
end.
