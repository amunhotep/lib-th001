  procedure actDocDocCommitAll_OnExecute(Sender :TObject);
  var
    lkSQL :string;
  begin
    if not dtsDoc.Active then exit;
    if not(dtsDoc.RecordCount > 0)then exit;
    dtsDoc.First;
    while not dtsDoc.EOF do
      begin
      if(dtsDoc.FieldByName('J28_FLAG_COMMIT').AsInteger <> 1)then
