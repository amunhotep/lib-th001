  procedure TERPFormRpti_OnTerms(aOwner:TComponent;aParent:TWinControl);
  var
    lkLastTop :Integer;
    lkLbl     :TLabel;
    lkEdt     :TxcEditCalc;
  begin
    lkLastTop := 4;
    lkLastTop := lkLastTop + InputIntf_DatePeriod_Create(aOwner, aParent, 'gbDatePeriod', 'Укажите период', 4, lkLastTop, 44, 360,objname_datefrom,objname_dateto,StartOfTheMonth(Now),EndOfTheMonth(Now)).Height;
    lkLastTop := lkLastTop + 4;
    lkLastTop := lkLastTop + InputIntf_Ref_Create(aOwner,aParent,objname_firms   ,msg_input_firms   ,4,lkLastTop,  0,360,'TABL$R_FIRMS'  ,TERPForm_Settings(aOwner).Values[ERP_SETTINGS_TABLENAME]).Height;
    lkLastTop := lkLastTop + 4;
    lkLbl     := CreateTLabel(aOwner, aParent,'Шаг анализа суммы кредита (гривен)', 4, lkLastTop, 20, 360, alNone, taLeftJustify);
    lkLastTop := lkLastTop + lkLbl.Height + 4;
    lkEdt := CreateTxcEditCalc(aOwner, aParent, objname_delta, 4, lkLastTop, 20, 360);
    lkEdt.Value := 500;
    lkLastTop := lkLastTop + lkEdt.Height + 4;
    lkLastTop := lkLastTop + InputIntf_CheckBox_Create  (aOwner,aParent,objname_hidezero,'Не показывать пустые',4,lkLastTop, 20,360).Height;
    lkLastTop := 4;
    lkLastTop := lkLastTop + InputIntf_Ref_Create(aOwner,aParent,objname_filials ,msg_input_filials ,368,lkLastTop,320,360,'TABL$R_FILIALS',TERPForm_Settings(aOwner).Values[ERP_SETTINGS_TABLENAME]).Height;
    lkLastTop := lkLastTop + 4;
  end;
