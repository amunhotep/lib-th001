    lkPC := CreateTxcPageControlEx(aOwner, aParent, 'PCCharts', 0,0,600,600, alClient);
    lkPC.MultiLine := false;
    lkTS := TERPFormRpti_CreateTabSheetChartBar(aOwner,lkPC,'JCNT','Количество кредитов','График количества кредитов','SUMTO');
//    TDBChart(aOwner.FindComponent('DBChartBar_S3771END')).BottomAxis.DateTimeFormat := 'mmmmm yyyy';
    with TBarSeries(aOwner.FindComponent('TBarSeries_JCNT'))do
      begin
      Color            := Amunhotep.MainForm.StyleManager.Colors.HotTrackBorder;
      ColorEachPoint   := false;
      ShowInLegend     := false;
      YValues.Order    := loNone;
      YValues.DateTime := false;
      end;
    lkTS := TERPFormRpti_CreateTabSheetChartBar(aOwner,lkPC,'JCSCNT','Количество человек','График количества человек','SUMTO');
//    TDBChart(aOwner.FindComponent('DBChartBar_S3771END')).BottomAxis.DateTimeFormat := 'mmmmm yyyy';
    with TBarSeries(aOwner.FindComponent('TBarSeries_JCSCNT'))do
      begin
      Color            := Amunhotep.MainForm.StyleManager.Colors.HotTrackBorder;
      ColorEachPoint   := false;
      ShowInLegend     := false;
      YValues.Order    := loNone;
      YValues.DateTime := false;
      end;
    lkTS := TERPFormRpti_CreateTabSheetChartBar(aOwner,lkPC,'JSUM','Сумма кредитов','График суммы кредитов','SUMTO');
//    TDBChart(aOwner.FindComponent('DBChartBar_S3771END')).BottomAxis.DateTimeFormat := 'mmmmm yyyy';
    with TBarSeries(aOwner.FindComponent('TBarSeries_JSUM'))do
      begin
      Color            := Amunhotep.MainForm.StyleManager.Colors.HotTrackBorder;
      ColorEachPoint   := false;
      ShowInLegend     := false;
      YValues.Order    := loNone;
      YValues.DateTime := false;
      end;
    lkTS := TERPFormRpti_CreateTabSheetChartBar(aOwner,lkPC,'JAVG','Средний кредит','График среднего кредита','SUMTO');
//    TDBChart(aOwner.FindComponent('DBChartBar_S3771END')).BottomAxis.DateTimeFormat := 'mmmmm yyyy';
