    lkTS := TERPFormRpti_CreateTabSheetChartBar(aOwner,lkPC,'S3771DEB','Выдача/Погашение или реализация (гистограмма)','График отношения выданной суммы к сумме погашения','DATE_COMMIT');
    TDBChart(aOwner.FindComponent('DBChartBar_S3771DEB')).BottomAxis.DateTimeFormat := 'mmmmm yyyy';
    with TBarSeries(aOwner.FindComponent('TBarSeries_S3771DEB'))do
      begin
