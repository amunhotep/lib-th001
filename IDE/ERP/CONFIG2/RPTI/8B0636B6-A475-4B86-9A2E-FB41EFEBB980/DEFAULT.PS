    with TBarSeries.Create(aOwner) do
      begin
      Name                := ClassName+'_'+'S3771KRD';
      ParentChart         := TDBChart(aOwner.FindComponent('DBChartBar_S3771DEB'));
      Visible             := true;
      ColorEachPoint      := false;
      ShowInLegend        := false;
      Marks.Visible       := false;
      DataSource          := TERPForm_DBGridMain(aOwner).DataSource.DataSet;
      YValues.Order       := loNone;
      YValues.DateTime    := false;
      YValues.ValueSource := 'S3771KRD';
      XLabelsSource       := 'DATE_COMMIT';
      Color               := $008000FF;
      end;

    lkTS := TERPFormRpti_CreateTabSheetChartLine_Local(aOwner,lkPC,'S3771DEB','Выдача/Погашение или реализация (линия)','График отношения выданной суммы к сумме погашения','DATE_COMMIT');
    TDBChart(aOwner.FindComponent('DBChartLine_S3771DEB')).BottomAxis.DateTimeFormat := 'mmmmm yyyy';
    with TLineSeries(aOwner.FindComponent('TLineSeries_S3771DEB'))do
      begin
      Color            := $00408040;
      ColorEachPoint   := false;
      ShowInLegend     := false;
      YValues.Order    := loNone;
      YValues.DateTime := false;
      end;
    with TLineSeries.Create(aOwner) do
      begin
      Name                := ClassName+'_'+'S3771KRD';
      ParentChart         := TDBChart(aOwner.FindComponent('DBChartLine_S3771DEB'));
      Visible             := true;
      ColorEachPoint      := false;
      ShowInLegend        := false;
      Marks.Visible       := false;
      DataSource          := TERPForm_DBGridMain(aOwner).DataSource.DataSet;
      YValues.Order       := loNone;
      YValues.DateTime    := false;
      YValues.ValueSource := 'S3771KRD';
      XLabelsSource       := 'DATE_COMMIT';
      LinePen.Width       := 2;
      Color               := $008000FF;
      end;

    lkTS := TERPFormRpti_CreateTabSheetChartBar(aOwner,lkPC,'S3771IDX','Рост/падение','Рост/падение суммы на руках','DATE_COMMIT');
    TDBChart(aOwner.FindComponent('DBChartBar_S3771IDX')).BottomAxis.DateTimeFormat := 'mmmmm yyyy';
    with TBarSeries(aOwner.FindComponent('TBarSeries_S3771IDX'))do
      begin
      Color            := Amunhotep.MainForm.StyleManager.Colors.HotTrackBorder;
