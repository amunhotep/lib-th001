  procedure Amunhotep_MainMenu_Create_Basic;
  var
    lkAct    :TCustomAction;
    lkMIWnd  :TMenuItem;
    lkMIHelp :TMenuItem;
    lkMI     :TMenuItem;           
  begin
    DontAutoFree;
    lkMIWnd  := CreateTMenuItem(Amunhotep.MainForm.Menu.Items,obj_name_mimainwindow,msg_mimainwindow,msg_mimainwindow,'',-1,AMUNHOTEP_MAINMENU_INDEX_WND );
