        //======================================================================
        procedure Form_OnClose(Sender :TObject; var Action :TCloseAction);
        begin
          if Trans<>nil then  
            if Trans.InTransaction then
              Trans.Rollback;
          Action := caFree;
        end;
        //======================================================================
        procedure Form_OnResize(Sender :TObject);
        begin
          PanelLeft.Width := (Form.ClientWidth div 2) - 2;
